	picture(class= data.pictureClass)
		//- source(srcset= data.src+".webp 1x,"+data.src+"@2.webp 2x", type="image/webp")
		source(srcset= data.src+".webp", type="image/webp")
		img(class= data.imgClass, src= data.src+".png" alt= data.alt)
		//- img(src= data.src+".png", alt= data.src)


